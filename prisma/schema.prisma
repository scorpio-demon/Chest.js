generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @map("_id") //user id
  username  String @unique
  name      String
  chats     String @default("[]")
}

model Private_chat {
  id        String @id @map("_id") //private chat id
  persons   Json   @default("[]")
}

model Group_chat {
  id        String @id @map("_id") //group id
  name      String
  admins    Json   @default("[]")
  members   Json   @default("[]")
}

model Channel {
  id        String @id @map("_id") //channel id
  name      String
  admins    Json   @default("[]")
  members   Json   @default("[]")
}

model Chats {
  id               String @id @map("_id") //chat id
  custom_id        Int    @unique // to arrange chats
  sender_unique_id String //sender unique id
  chat_id          String //private or group or channel id
  message          String
  time_stamp       String
}
