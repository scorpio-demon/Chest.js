generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./main.db"
}

model User {
  unique_id String @id @unique
  username  String @unique
  name      String
}

model Private_chat {
  id      String @id @unique
  persons String //we use string instead of json because of limitation in sqlite
}

model Group_chat {
  id     String @id @unique
  name   String
  admins String //we use string instead of json because of limitation in sqlite
  users  String //we use string instead of json because of limitation in sqlite
}

model Channel {
  id      String @id @unique
  name    String
  admins  String //we use string instead of json because of limitation in sqlite
  members String //we use string instead of json because of limitation in sqlite
}

model Chats {
  id         Int    @id @default(autoincrement())
  unique_id  String @unique
  chat_id    String //private or group or channel id
  message    String
  time_stamp String
}
