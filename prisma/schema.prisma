generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./main.db"
}

model User {
  unique_id String @id @unique //user id
  username  String @unique
  name      String
}

model Private_chat {
  id      String @id @unique
  persons String //we use string instead of json because of limitation in sqlite
}

model Group_chat {
  id      String @id @unique
  name    String
  admins  String //we use string instead of json because of limitation in sqlite
  members String //we use string instead of json because of limitation in sqlite
}

model Channel {
  unique_id String @unique //channel id
  name      String
  admins    String //we use string instead of json because of limitation in sqlite
  members   String //we use string instead of json because of limitation in sqlite
}

model Chats {
  id               Int    @id @default(autoincrement()) //to arrange chats
  unique_id        String @unique //to call chats
  sender_unique_id String //sender unique id
  chat_id          String //private or group or channel id
  message          String
  time_stamp       String
}
